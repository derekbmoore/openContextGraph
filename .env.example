# OpenContextGraph Environment Configuration
# Copy to .env and configure

# =============================================================================
# Authentication (OIDC/OAuth2)
# =============================================================================
AUTH_REQUIRED=true
# For Keycloak:
OIDC_ISSUER_URL=https://keycloak.example.com/realms/ctxEco
OIDC_CLIENT_ID=ctxEco-backend
OIDC_AUDIENCE=ctxEco
# For Azure AD (optional):
# AZURE_AD_TENANT_ID=your-tenant-id
# AZURE_AD_CLIENT_ID=your-client-id

# =============================================================================
# Database
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ctxEco
POSTGRES_USER=ctxEco
POSTGRES_PASSWORD=changeme

# =============================================================================
# Zep Memory Service
# =============================================================================
ZEP_API_URL=http://zep:8000
ZEP_API_KEY=

# =============================================================================
# Temporal Workflow Engine
# =============================================================================
TEMPORAL_HOST=temporal:7233
TEMPORAL_NAMESPACE=ctxEco

# =============================================================================
# LLM Provider (choose one)
# =============================================================================
# Sage Story/Visual Models
ANTHROPIC_MODEL=claude-opus-4-6
GEMINI_MODEL=gemini-3.1-pro-preview
GOOGLE_CLOUD_PROJECT=secai-radar
GOOGLE_CLOUD_LOCATION=global

# OpenAI Compatible (vLLM, Ollama, etc.)
LLM_PROVIDER=openai
LLM_API_BASE=http://localhost:11434/v1
LLM_API_KEY=not-needed-for-local
LLM_MODEL=llama3.2

# Azure OpenAI (alternative)
# AZURE_OPENAI_ENDPOINT=https://your-instance.openai.azure.com
# AZURE_OPENAI_KEY=your-key
# AZURE_OPENAI_DEPLOYMENT=gpt-4o

# =============================================================================
# Voice Services (optional)
# =============================================================================
# Self-hosted TTS/STT
VOICE_ENABLED=false
TTS_API_URL=http://piper:5000
STT_API_URL=http://whisper:9000

# =============================================================================
# Observability
# =============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
LOG_LEVEL=INFO

# =============================================================================
# Application
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8082
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
